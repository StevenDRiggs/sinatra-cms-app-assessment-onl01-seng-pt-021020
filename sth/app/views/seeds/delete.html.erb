<h3 id="main-heading">Are you sure you want to delete this seed?</h3>

<h2 class="subheading">Targets</h2>
<ul>
  <% for target in @seed.targets %>
    <li><%= target.name %></li>
  <% end %>
</ul>

<form action="/seeds/<%= @seed.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="DELETE">

  <div class="button">
    <button type="submit" id="submit">Delete</button>
  </div>

  <div class="button">
    <a href="/seeds/<%= @seed.id %>"><button type="button">Cancel</button></a>
  </div>

</form>
