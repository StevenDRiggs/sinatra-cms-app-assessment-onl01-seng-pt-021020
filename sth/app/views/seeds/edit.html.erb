<h1>Edit Seed</h1>

<form action="/seeds/<%= @seed.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">

  <h2>Targets</h2>
  <% for target in @user.targets %>
    <label for="target-<%= target.id %>"><h3><%= target.name %></h3></label>
    <input type="checkbox" name="targets[]" id="target-<%= target.id %>" value="<%= target.id %>" <%= 'checked' if @seed.targets.include?(target) %>>
  <% end %>

  <a href="/targets/new"><button type="button" id="new_target">New Target</button></a>

  <button type="submit" id="submit">Submit</button>

</form>
