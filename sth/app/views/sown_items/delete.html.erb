<h3 id="main-heading">Are you sure you want to delete this sown item?</h3>

<h2 class="subheading"><%= @sown_item.item %></h2>
<h3 class="caption">Target: <%= @sown_item.target.name %></h3>

<form action="/sown_items/<%= @sown_item.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="DELETE">

  <div class="button">
    <button type="submit" id="submit">Delete</button>
  </div>

  <div class="button">
    <a href="/sown_items/<%= @sown_item.id %>"><button type="button">Cancel</button></a>
  </div>

</form>
