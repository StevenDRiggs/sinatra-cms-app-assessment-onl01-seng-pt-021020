<h1>Edit Received Item</h1>

<form action="/received_items/<%= @received_item.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">

  <label for="item"><h2>Item</h2></label>
  <input type="text" name="item" id="item" value="<%= @received_item.item %>" required>

  <h3>Received from:</h3>
  <% for source in @sources %>
    <label for="source"><%= source.name %></label>
    <input type="radio" name="source" id="source" value="<%= source.id %>" <%= 'checked' if @received_item.source == source %> required>
  <% end %>
  <a href="/sources/new"><button type="button">New Source</button></a>

  <button type="submit" id="submit">Submit</button>

</form>
