<h3>Are you sure you want to delete this source?</h3>

<h2><%= @source.name %></h2>

<form action="/sources/<%= @source.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="DELETE">

  <button type="submit" id="submit">Delete</button>

  <a href="/sources/<%= @source.id %>"><button type="button">Cancel</button></a>

</form>
