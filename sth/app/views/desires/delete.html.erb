<h3 id="main-heading">Are you sure you want to delete this desire?</h3>

<h2 class="subheading"><%= @desire.name %></h2>
<p class="caption"><%= @desire.description %>

<form action="/desires/<%= @desire.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="DELETE">

  <div class="button">
    <button type="submit" id="submit">Delete</button>
  </div>

  <div class="button">
    <a href="/desires/<%= @desire.id %>"><button type="button">Cancel</button></a>
  </div>

</form>
