<h1>Edit Desire</h1>

<form action="/desires/<%= @desire.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">

  <label for="name">Name</label>
  <input type="text" name="name" id="name" value="<%= @desire.name %>" required>

  <label for="description">Description</label>
  <textarea name="description" id="description"><%= @desire.description %></textarea>

  <button type="submit" id="submit">Submit</button>

</form>
