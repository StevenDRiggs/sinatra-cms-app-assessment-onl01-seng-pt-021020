<%for source in @harvest.sources %>
  <a href="/sources/<%= source.id %>"><h2 class="subheading"><%= source.name %></h2></a>

  <h3 class="subheading">Received<h3>
  <ul>
    <li><%= source.time_received %></li>
    <br>
    <li>$<%= "%.2f" % source.money_received %></li>
    <br>
    <% for item in source.received_items %>
      <li><a href="/received_items/<%= item.id %>"><%= item.item %></a></li>
    <% end %>
  </ul>
<% end %>

<% if @harvest.completed %>
  <h2 class="subheading">Completed In</h2>
  <p class="caption"><%= @harvest.time_to_completion %></p>
<% end %>

<div class="button">
  <a href="/harvests/<%= @harvest.id %>/edit"><button type="button">Edit Harvest</button></a>
</div>

<div class="button">
  <a href="/harvests/<%= @harvest.id %>/delete"><button type="button">Delete Harvest</button></a>
</div>