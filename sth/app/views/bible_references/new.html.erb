<h1 id="main-heading">New Bible Reference</h1>

<form action="/bible_references" method="POST">

  <div class="form-labels">
    <label for="reference"><h3>Reference</h3></label>

    <br>

    <label for="content"><h3>Passage</h3></label>
  </div>

  <div class="form-fields">
    <input type="text" name="reference" id="reference" required>

    <br><br>

    <textarea name="content" id="content"></textarea>
  </div>

  <div class="clearfix"></div>

  <h2 class="subheading">Desires</h2>
  <% for desire in @user.desires %>
    <div>
      <label for="desire-<%= desire.id %>"><%= desire.name %></label>
      <input type="checkbox" name="desires[]" id="desire-<%= desire.id %>" value="<%= desire.id %>">
    </div>
  <% end %>
  <div class="button">
    <a href="/desires/new"><button type="button">New Desire</button></a>
  </div>

  <h2 class="subheading">Seeds</h2>
  <% for seed in @user.seeds %>
    <div>
      <label for="seed-<%= seed.id %>"><%= seed.first_three %></label>
      <input type="checkbox" name="seeds[]" id="seed-<%= seed.id %>" value="<%= seed.id %>">
    </div>
  <% end %>
  <div class="button">
    <a href="/seeds/new"><button type="button">New Seed</button></a>
  </div>

  <h2 class="subheading">Harvests</h2>
  <% for harvest in @user.harvests %>
    <div <%= 'class="completed"' if harvest.completed %>>
      <label for="harvest-<%= harvest.id %>"><%= harvest.first_three %></label>
      <input type="checkbox" name="harvests[]" id="harvest-<%= harvest.id %>" value="<%= harvest.id %>">
    </div>
  <% end %>
  <div class="button">
    <a href="/harvests/new"><button type="button">New Harvest</button></a>
  </div>

  <div class="button">
    <button type="submit" id="submit">Submit</button>
  </div>

</form>
