<h3 id="main-heading">Are you sure you want to delete this Bible reference?</h3>

<h2 class="subheading"><%= @bible_reference.reference %></h2>
<p class="caption"><%= @bible_reference.content %></p>

<form action="/bible_references/<%= @bible_reference.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="DELETE">

  <div class="button">
    <button type="submit" id="submit">Delete</button>
  </div>

<div class="button">
  <a href="/bible_references/<%= @bible_reference.id %>"><button type="button">Cancel</button></a>
</div>

</form>
